<Window x:Class="CardIndex.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardIndex"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="600">
    <Grid>
        <TextBlock Text="Картотека" HorizontalAlignment="Center" FontSize="23"/>
        <DataGrid x:Name="cardTable" Margin="0,55,0,0"/>
        <Button Content="Создать карту" Margin="0,0,115,714" Click="CreateCard_Click" Height="23" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="103" />
        <Button Content="Обновить" Margin="0,0,223,714" Click="Update_Click" Height="23" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="103" />
        <Button Content="Удалить карту" Margin="0,0,7,714" Click="DeleteCard_Click" Height="23" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="103" />
    </Grid>
</Window>
