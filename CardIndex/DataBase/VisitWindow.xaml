<Window x:Class="CardIndex.DataBase.VisitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardIndex.DataBase"
        mc:Ignorable="d"
        Title="VisitWindow" Height="250.274" Width="486.849">
    <Grid>
        <DatePicker HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Name="dateVisit"/>
        <TextBox HorizontalAlignment="Left" Margin="10,39,0,26" TextWrapping="Wrap" Width="459" Name="diagnosis"/>
        <RadioButton x:Name="primary" Content="Первичный" HorizontalAlignment="Left" Margin="376,17,0,0" VerticalAlignment="Top" IsChecked="True" Height="19" Width="93"/>
        <RadioButton x:Name="secondary" Content="Вторичный" HorizontalAlignment="Left" Margin="274,17,0,0" VerticalAlignment="Top" IsChecked="False" Height="17" Width="97"/>
        <Button Content="Сохранить" HorizontalAlignment="Left" Margin="296,193,0,0" VerticalAlignment="Top" Width="75" Click="Save_Click"/>
        <Button Content="Назад" HorizontalAlignment="Left" Margin="394,193,0,0" VerticalAlignment="Top" Width="75" Click="Back_Click"/>

    </Grid>
</Window>
